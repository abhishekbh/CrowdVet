<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
       

        <link href="/kiva_style.css" rel="stylesheet" type="text/css">
        <meta name="description" content="">
        <meta name="author" content="">
        <script src="//code.jquery.com/jquery-1.9.1.js"></script>
        <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

        <title>Become a Volunteer Today!</title>
        <script>
            $(document).ready(function() {
                var checked = false;
                // validate every field is completed
                $('#signup-submit').on('submit', function(event, elem){
                    if (!checked) {
                        event.preventDefault();
                        checked = true;
                        $('#signup-form input').each(function(i, e) {
                            console.log($(e).val());
                            if ($(e).val() == '' && $(e).attr('type') != 'submit') {
                                console.log('Please complete all fields');
                                $('#msg').css('display', '');
                                checked = false;
                            }
                        });
                        if (checked) $('#signup-submit').submit();
                    }
                });
            });                
        </script>

    </head>

    <body>

    <% include banner %>

    <div id="signup-form">

        <form id="signup-submit" action="/volunteer/submit-volunteer" method="POST">
            <label for="first_name"> First Name </label>
            <input type="text" name="first_name" size="20" class="form-control" placeholder=""><br>

            <label for="last_name"> Last Name </label>
            <input type="text" name="last_name" size="20" class="form-control" placeholder=""><br>


            <label for="email_address"> Email Address </label>
            <input type="text" name="email_address" size="20" class="form-control" placeholder=""><br>

            <label for="password"> Password </label>
            <input type="password" name="password" size="20" class="form-control" placeholder=""><br>

            <label for="linked_in"> Linkedin Profile </label>
            <input type="text" name="linked_in" size="20" class="form-control" placeholder=""><br>

            <label for="resume_link"> Link to Most Recent Resume </label>
            <input type="text" name="resume_link" size="20" class="form-control" placeholder=""><br>

            <label for="why_kiva"> Why are you interested in becoming a volunteer for Kiva? </label>
            <input type="text" name="resume_link" size="100" class="form-control" placeholder=""><br>

            <label for="what_skills"> What skills do you possess that make you a qualified reviewer? </label>
            <input type="text" name="what_skills" size="100" class="form-control" placeholder=""><br>

            <div id="msg" style="display:none;color:red"><b>Please complete all fields.</b></div>

            <input type="submit" class="btn btn-primary">
        </form>
    </div>   
    
    <% include footer %>


    </body>

</html>